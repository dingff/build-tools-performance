{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "rangeStrategy": "bump",
  "labels": ["dependencies"],
  "requiredStatusChecks": ["Benchmark"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-breaking dependencies",
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
